                        <script>
                            var intentos= 0;
                            var clave =Math.floor(Math.random()*100);
                            var password='';
                            var bandera = true;
                            do{
                            password=prompt('adivina el  numero que estoy pensando...llevas ' + intentos +' intentos')
                            intentos =intentos +1;
                            console.log('Clave:' +clave+', valor' +password +'intentos'+intentos);
                            if(password>clave)
                                alert('incorrecto el numero debe ser menor!!!');
                                else if(password<clave)
                                    alert('incorrecto el numero debe ser mayor!!!');
                                    else{
                                        bandera=false;
                                        alert('acceso concedido.... te tardastes ' + intentos +' intentos');
                                    }
                            }while (bandera);
                            
                            
                            
                        </script>

